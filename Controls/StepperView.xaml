<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="maui.boozer.Controls.StepperView">
    <Frame>
        <HorizontalStackLayout BindingContext="{x:Reference this}">
            <Button Text="-" Margin="10" Clicked="OnMinusButtonClicked"></Button>
            <Label  Text="{Binding Value}" FontSize="Medium" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="10" ></Label>
            <Button Text="+" Margin="10" Clicked="OnPlusButtonClicked"></Button>
        </HorizontalStackLayout>
    </Frame>
</ContentView>
