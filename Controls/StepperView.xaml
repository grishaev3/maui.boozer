<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="maui.boozer.Controls.StepperView">
    <Frame Padding="10">
        <HorizontalStackLayout BindingContext="{x:Reference this}">
            <Button Text="-" Margin="5" Clicked="OnMinusButtonClicked"></Button>
            <Label  Text="{Binding Value}" FontSize="Medium" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Margin="3"/>
            <Button Text="+" Margin="5" Clicked="OnPlusButtonClicked"></Button>
        </HorizontalStackLayout>
    </Frame>
</ContentView>
